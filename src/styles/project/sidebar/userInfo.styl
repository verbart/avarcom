.userInfo
  display flex
  position relative
  padding-bottom 20px
  margin-bottom 20px
  &:after
    separator()
    content ' '
    position absolute
    left 0
    right 0
    bottom 0
  &__photo
    width 5.5rem
    height @width
    border 4px solid #383838
    border-radius 50%
    background-color #d2d2d2
  &__info
    display flex
    flex-direction column
    justify-content center
    padding-left 15px
  &__name
    margin 0
    color white
    font-size 1.5rem
  &__link
    color #f59c00
    font-size 0.85rem
    margin-right 18px
    text-decoration none
    &:hover
      color #ffba00
    &:last-child
      margin-right 0
