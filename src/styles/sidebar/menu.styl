.menu
  &__item
    display flex
    align-items center
    margin-bottom 20px
    color #fff
    text-decoration none
  &__icon
    margin-right 15px
    &_car
      sprite($car)
    &_chart
      sprite($chart)
    &_check
      sprite($check)
  &__text
    font-family 'Helvetica Neue Cyr'
    font-size 1.313rem

  &__item_active
    color #f59c00
    cursor default
    .menu__icon
      &_car
        spritePosition($car_active)
      &_chart
        spritePosition($chart_active)
      &_check
        spritePosition($check_active)
