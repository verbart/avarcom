theme = #616161


.datePicker
  display block
  position relative
  &__field
    display block
    width 100%
    min-width 140px
    height 2rem
    padding-left 1rem
    padding-right 1rem
    color #454545
    font 200 1.1rem/2.25rem 'Helvetica Neue Cyr', sans-serif
    background #ededed
    cursor pointer
    transition .4s
    &:hover
      background darken(@background, 10%)
  &__calendar
    position absolute
    top 100%
    left 0
    display block
    max-width 240px
    font-family sans-serif
    overflow auto
    z-index 100
    table
      min-width 230px
      border-spacing 0
      border-collapse collapse
      table-layout fixed
      tr
        border 1px solid #bebebe
      th, td
        padding 2px 5px
        text-align center
        font-weight inherit

    .header
      line-height 1
      font-size .9rem
      background theme
      color white
      text-transform capitalize
      tr
        border-bottom none
      td, th
        padding 8px
      &__nav
        width 30px
        cursor pointer
        transition .4s
        &:hover
          opacity .5

    .month
      background #fff
      cursor default
      th, td
        font-size .8rem
        border-right 1px solid #bebebe
        &:last-child
          border-right 0

    .weekdays
      &__day
        color theme
        font-weight 400
        text-transform uppercase

    .week
      &__day
        cursor pointer
        transition .4s
        &:hover
          background rgba(theme, .2)
        &_otherMoth
          color #c0c0c0
        &_today
          background theme
          color #fff
        &_selected
          background rgba(theme, .2)
          color theme