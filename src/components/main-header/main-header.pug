include ../icon/icon

header.mainHeader.mainHeader_dashboard(ng-controller='MyController')
  .container.mainHeader__container
    a.logo.mainHeader__logo(ui-sref='home')
      .logo__image
        +icon({icon: 'logo'})
      h1.logo__text Центр АК

    .mainHeader__city(id='intro-step-1')
      city-switcher

    .mainHeader__navbar(ng-class='{mainHeader__navbar_active: $ctrl.navbarIsActive}')
      main-navbar

    button.mainHeader__burgerButton(ng-click='$ctrl.navbarIsActive = !$ctrl.navbarIsActive')
      +icon({icon: 'menu'})
