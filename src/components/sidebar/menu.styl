.menu
  position relative
  margin-top 25px
  padding-top 30px
  &:after
    separator()
    content ' '
    position absolute
    left 0
    right 0
    top 0
  &__item
    display flex
    align-items center
    margin-bottom 15px
    color #fff
    text-decoration none
    &_active
      color #f59c00
      cursor default
      .menu__icon
        &_car
          spritePosition($car_active)
        &_chart
          spritePosition($chart_active)
        &_check
          spritePosition($check_active)
  &__icon
    margin-right 15px
    &_car
      sprite($car)
    &_chart
      sprite($chart)
    &_check
      sprite($check)
  &__text
    font-family 'Helvetica Neue Cyr'
    font-size 1.2rem

.sidebar__body_mini
  .menu
    margin-top 30px
    padding-top 35px
    &__item
      margin-bottom 2rem
    &__icon
      margin-right 0
      &_car
        sprite($car)
      &_chart
        sprite($chart)
      &_check
        sprite($check)
    &__item_active
      .menu__icon
        &_car
          spritePosition($car_active)
        &_chart
          spritePosition($chart_active)
        &_check
          spritePosition($check_active)
