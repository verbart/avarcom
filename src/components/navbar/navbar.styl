.navbar
  display flex
  min-height 100%
  @media (max-width 992px)
    flex-direction column
    align-items center
    padding-top 30px
    padding-bottom 30px
  &__item
    display flex
    align-items center
    position relative
    margin-left 15px
    margin-right 15px
    color #4f4e57
    font-weight 600
    @media (max-width 992px)
      padding-top 10px
      padding-bottom 10px
      margin-bottom 15px
    &:before
      height 0
      content ''
      position absolute
      top 0
      left 0
      right 0
      background #f59c00
      transition height .2s
    &_active
      color #f59c00
      &:before
        height 3px
      .navbar__link
        cursor default
  &__link
    text-decoration none
    color inherit
    transition .2s
    &:hover
      color #f59c00
