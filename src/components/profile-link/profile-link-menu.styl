.profileLinkMenu
  position absolute
  right 0
  top 100%
  visibility hidden
  display block
  min-width 160px
  margin -8px 0 0
  padding 0
  list-style none
  border-radius 3px
  box-shadow 1px 2px 3px 2px rgba(0,0,0,0.3)
  background #fff
  z-index 10
  opacity 0
  transition .1s
  &_active
    visibility visible
    opacity 1
    margin-top 8px
  &__link
    display block
    width 100%
    padding 5px 10px
    text-decoration none
    font-size .9rem
    font-weight 400
    transition .2s
    &:hover
      background #616161
      color #fff
  &__separator
    height 1px
    margin 0
    border 0
    background #c9c8c5
