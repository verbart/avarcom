@import 'accidents'
@import 'closed'
@import 'statistics'

.dashboard
  background #ededed
  &__main
    margin-left 60px
    width calc(100% - 60px)
    padding-left 15px
    padding-right 15px
    background #ededed
  &.sidebarIsOpen
    .dashboard__main
      margin-left 320px
      width calc(100% - 320px)
  &__header
    display flex
    align-items center
    min-height 4rem
  &__caption
    color #383838
    font-family 'Helvetica Neue Cyr', sans-serif
    font-size 1.65rem
    font-weight 200
  &__section
    padding 15px
    background #fff
