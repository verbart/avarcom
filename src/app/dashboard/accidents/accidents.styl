.accident
  &List
    td
      &:first-child
        width 2.75rem
      &:last-child
        line-height 1
    &__address
      border-right none !important
    &__status
      font-size .9rem
      line-height 1
    &__icon
      margin-top 3px
    &__item
      transition .4s
      &_green
        .accidentList__status
          color #1aaf5d
        .accidentList__icon
          sprite($right-chevron_green)
      &_red
        .accidentList__status
          color #ea4b35
        .accidentList__icon
          sprite($right-chevron_red)
      &_orange
        .accidentList__status
          color #ea4b35
        .accidentList__icon
          sprite($right-chevron_orange)
      &_active
        background #eee
        .accidentList__address
          font-weight 300

  &Form
    padding-left 15px
    padding-right 15px
    & + &
      padding-top 15px
      border-top 1px solid #c3c3c3
    &__documents
      display flex
      flex-wrap wrap
      justify-content center
    &__photoPreview, &__addPhoto
      display inline-block
      width 60px
      height @width
      margin 10px
      cursor pointer
      transition .4s
      &:hover
        opacity .7
    &__photoPreview
      background-size cover
      background-position center
      background-repeat no-repeat
    &__addPhoto
      padding 6px 0 0
      background #ededed
      border 1px solid #a0a0a0
      color #a0a0a0
      text-align center
      &:before
        sprite($plus)
