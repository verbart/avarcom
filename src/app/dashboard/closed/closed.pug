.container-fluid.dashboard__main.flex__item_grow
    .row.flex.flex__item_grow.gutter_bottom_half
        .col-md-7.flex.flex_column
            header.dashboard__header
                h1.dashboard__caption Завершённые

            .gutter_bottom_half
                .dashboard__section
                    form.form(ng-submit='listCtrl.search()')
                        .form__searchForm
                            input.form__input(ng-model='listCtrl.searchComInput' placeholder='Введите имя, марку машины или дату...')
                            button.button.button_sm НАЙТИ

            .tabs
                .tabs__header
                    .tabs__tab.tabs__tab_active Все
                    .tabs__tab Подтверждённые
                    .tabs__tab Неподтверждённые

            .dashboard__section.scroll
                .table
                    table.table_hover.accidentList
                        tr.accidentList__item(
                            ng-repeat='accident in listCtrl.accidents'
                            ui-sref='dashboard.closed({id: accident.crash_id})'
                            ui-sref-active='accidentList__item_active'
                        )
                            td.text_center {{$index+1}}.
                            td.accidentList__address {{accident.address}}
                            td.text_right
                                .accidentList__icon

        .col-md-5.flex.flex_column
            include edit
