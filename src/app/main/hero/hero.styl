.hero
  background url('../images/bg-1.jpg') center / cover no-repeat
  &__container
    padding-top 3rem
    padding-bottom 2rem
    text-align center
    @media (max-width 992px)
      padding-top 1rem
      padding-bottom 1rem
  &__header
    margin-top 0
    margin-bottom 1.5rem
    text-shadow 6px 5px 7px rgba(0, 0, 0, 0.2)
    @media (max-width 992px)
      margin-bottom 1rem
      line-height 1.1
    &_1
      font-weight 600
      @media (max-width 992px)
        font-size 1.3rem
    &_2
      @media (max-width 992px)
        font-size 1.2rem
    &_3
      font-size 1.25rem
      font-weight 600
      @media (max-width 992px)
        font-size 1.1rem
