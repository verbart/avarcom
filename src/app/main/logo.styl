.logo
  display flex
  align-items center
  &__image
    align-self flex-start
    max-height 52px
    @media (max-width 768px)
      max-height 33px
  &__text
    padding-left .5rem
    line-height 1.15
    font-size 1.25rem
    font-weight 400
    text-align left
    @media (max-width 768px)
      font-size .9rem
