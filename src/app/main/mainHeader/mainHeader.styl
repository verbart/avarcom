.mainHeader
  @media (max-width 768px)
    position fixed
    top 0
    left 0
    right 0
    z-index 100
    box-shadow 0 1px 2px 1px rgba(0, 0, 0, 0.3)
    background #363636
    color #fff
  &__container
    display flex
    justify-content space-between
    align-items center
    flex-wrap wrap
    padding-top 15px
    padding-bottom 15px
    border-bottom 1px solid rgba(#363636, 50%)
    @media (max-width 768px)
      flex-wrap nowrap
      padding-top 8px
      padding-bottom 8px
  &__menu
    display flex
    margin-left auto
    @media (min-width 768px)
      display flex !important
    @media (max-width 768px)
      position fixed
      top 50px
      left 0
      right 0
      flex-direction column
      order 3
      justify-content center
      margin-top -10px
      padding 15px
      background #444
      opacity 0
      transition .1s
      &_active
        margin-top 0
        opacity 1
  &__dashboardLink
    align-self flex-end
    padding-left 15px
    padding-right 15px
    margin-left auto
    @media (max-width 768px)
      padding-left 0
      padding-right 0
      margin-right auto
      margin-bottom 15px
  &__contacts
    display flex
    flex-direction column
    align-items flex-end
    @media (max-width 768px)
      flex-direction row
      align-items center
      justify-content center
      margin-left 0
    @media (max-width 430px)
      flex-direction column
  &__phone
    margin-bottom 10px
    text-align right
    @media (min-width 430px) and (max-width 768px)
      margin-right 15px
      margin-bottom 0
    @media (max-width 768px)
      margin-top 15px
  &__menuButton
    display flex
    align-items center
    background none
    border none
    outline none
    box-shadow none
    color #fff
    .icon
      width 20px
      height @width
    @media (min-width 768px)
      display none
