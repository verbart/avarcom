.step
  &__container
    display flex
    justify-content center
    flex-wrap wrap
  &__item
    display flex
    align-items flex-end
    width 50%
    padding-bottom 15px
    padding-left 15px
    padding-right 15px
    @media (max-width 768px)
      width 100%
  &__index
    margin-top 0
    margin-bottom -0.3rem
    margin-right .8rem
    font-size 5rem
    font-weight 600
    line-height 1
    color #ffa800
  &__description
    margin 0
    font-weight 400
    font-size 1.15rem
    line-height 1.15
