.modal
  //display none
  position fixed
  z-index 1
  padding-top 100px
  left 0
  top 0
  width 100%
  height 100%
  overflow auto
  background rgba(0, 0, 0, 0.4)
  &__content, &-dialog
    position relative
    width 80%
    min-width 300px
    max-width 980px
    margin 15px auto
    background-color #fefefe
    box-shadow 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19)
    animation animateTop 0.4s
  &__header
    padding 10px 15px
    background-color #383838
    color white
  &__close
    display inline-block
    float right
    margin-top -2px
    color #fff
    font-size 1.5rem
    line-height 1
    trasition .4s
    &:hover, &:focus
      color #bebebe
      text-decoration none
  cursor pointer
  &__caption
    margin 0
    font-size 1.25rem
  //&__body
  &__footer
    padding 10px 15px
    background-color #383838
    color white

@keyframes animateTop
  from
    top -300px
    opacity 0
  to
    top 0
    opacity 1
