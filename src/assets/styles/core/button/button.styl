.button
  position relative
  display inline-block
  padding .4rem 1.25rem
  font-size 1.1rem
  border 1px solid transparent
  background #f59c00
  color white
  font-family 'Helvetica Neue Cyr'
  font-weight 300
  text-align center
  cursor pointer
  text-decoration none
  transition .4s
  &:hover
    background #ffba00
  &_sm
    padding .25rem 1rem
    font-size .85rem
  &_lg
    padding .5rem 1.4rem
    font-size 1.25rem
  &_grey
    background #616161
    &:hover
      background #363636
  &_block
    width 100%
