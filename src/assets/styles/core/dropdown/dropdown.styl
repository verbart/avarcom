.dropdown
  &__wrapper
    position relative
  position absolute
  left 0
  right 0
  top 100%
  margin 0
  padding 0
  list-style none
  background #dcdcdc
  border 1px solid #a0a0a0
  li
    padding-left .8rem
    padding-right .8rem
    cursor pointer
    transition .4s
    &.active
      background #eee
    &:not(:last-child) a
      border-bottom 1px solid #aaa
    &:hover
      opacity .5
  a
    display block
    padding-top .15rem
    padding-bottom .15rem
    color inherit
    text-decoration none
