@import '../../../../node_modules/slick-carousel/slick/slick.css'
@import '../../../../node_modules/slick-carousel/slick/slick-theme.css'

.slick
  &-loading &-list
    background #fff center center no-repeat

  &-arrow
    z-index 1
    transition .4s

    &:hover
      opacity .6

    &:before
      content ''
      font-family inherit

  &-prev, &-prev:hover, &-prev:focus
    sprite($arrow-to-left)
    left 0

  &-next, &-next:hover, &-next:focus
    sprite($arrow-to-right)
    right 0

  &-dots
    li
      width 12px
      height @width
      border-radius 50%
      background rgba(#616161, 50%)

      &.slick-active
        background #616161

      button:before
        content ''
        font-family inherit

  &-slide
    > div
      height 100%
