.dropdown
  display inline-block
  .multiselect-parent
    position relative
    display inline-block
    white-space nowrap
    .dropdown-menu
      position absolute
      left 1px
      top 100%
      display block
      min-width calc(100% - 2px)
      max-height 190px
      margin 8px 0 0
      padding 0
      list-style none
      box-shadow 1px 2px 3px 2px rgba(0,0,0,0.3)
      background #fff
      color #4f4e57
      z-index 100
      animation fadeInDown .1s
      li a
        display block
        padding 4px 8px
        transition .2s
        &:hover
          background rgba(#efefef, .5)
      li.active a
        background #efefef
  //.multiselect-parent.open
  &_block
    width 100%
    .multiselect-parent
      width 100%
      .dropdown-menu
        margin 0
