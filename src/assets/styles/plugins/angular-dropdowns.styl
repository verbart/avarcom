.wrap-dd-select
  position relative
  border 1px solid #aaa
  .selected
    position relative
    display block
    padding .25rem .8rem
    color #fff
    font-weight 200
    cursor pointer
    &:after
      content ''
      display block
      position absolute
      top 50%
      right .8rem
      transform translateY(-50%)
      border-left .4rem solid transparent
      border-right .4rem solid transparent
      border-top .4rem solid #ddd
      border-bottom none
      transition .2s
  .dropdown
    display none
  &.active
    .selected:after
      border-top none
      border-bottom .4rem solid #ddd
    .dropdown
      display block
